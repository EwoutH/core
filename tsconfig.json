{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "declaration": true,
        "sourceMap": true,
        "allowJs": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "esModuleInterop": true
    },
    "exclude": [
        "lib",
        "node_modules",
        "**/*.test.ts"
    ]
}
